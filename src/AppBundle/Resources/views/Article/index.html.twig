{% extends '::layout_back.html.twig' %}

{% block body -%}
    <h2 class="sub-header">Liste des Articles</h2>
    <div class="table-responsive">
        <table class="table  table-hover table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Contenu</th>
                    <th>Date</th>
                    <th>Datemodification</th>
                    <th>Auteur</th>
                    <th>Publication</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('admin_article_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.titre }}</td>
                        <td>{{ entity.contenu }}</td>
                        <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{% if entity.dateModification %}{{ entity.dateModification|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{{ entity.auteur }}</td>
                        <td>{{ entity.publication }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('admin_article_show', { 'id': entity.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('admin_article_edit', { 'id': entity.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('admin_article_new') }}">
                    Cr√©er un nouvelle article
                </a>
            </li>
        </ul>
    </div>






{% endblock %}
