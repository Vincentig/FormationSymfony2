{% extends '::layout_back.html.twig' %}

{% block body -%}

    <h2 class="sub-header">Liste des catégories</h2>
    <div class="table-responsive">
        <table class="table  table-hover table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('admin_categorie_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.titre }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('admin_categorie_show', { 'id': entity.id }) }}">détail</a>
                                </li>
                                <li>
                                    <a href="{{ path('admin_categorie_edit', { 'id': entity.id }) }}">éditer</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('admin_categorie_new') }}">
                    Créer une nouvelle catégorie
                </a>
            </li>
        </ul>
    </div>












{% endblock %}
