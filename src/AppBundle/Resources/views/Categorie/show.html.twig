{% extends '::layout_back.html.twig' %}

{% block body -%}
    <h1>Categorie</h1>

    <table class="table table-hover record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ entity.titre }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('admin_categorie') }}">
                Retour à la liste
            </a>
        </li>
        <li>
            <a href="{{ path('admin_categorie_edit', { 'id': entity.id }) }}">
                Éditer
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
